<h3>予定詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @task.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @task.start_date.strftime("%Y/ %m/ %d") %></td>
    </tr>
  <tr>
    <th>終了日</th>
    <td><%= @task.start_end.strftime("%Y/ %m/ %d") %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><% if @task.is_all_day == true %>○
        <% else %>
        <% end %>
    </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @task.introduction %></td>
  </tr>

</table>

<div>
  <ul>
    <li><%= link_to "予定一覧に戻る", :tasks %></li>
    <li><%= link_to "予約編集", [:edit, @task] %></li>
  </ul>
</div>