<h3>タスク名</h3>

<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
 <% end %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
       <td><%= task.id %></td>
       <td><%= task.title %></td>
       <td><%= task.start_date.to_s(:date_jp) %></td>
       <td><%= task.start_end.to_s(:date_jp) %></td>
       <td><% if task.is_all_day = "true" %>○
       <% else %>
       ""
       <% end %>
       </td>
       <td><%= task.updated_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "新規予定登録", :new_task %></p>